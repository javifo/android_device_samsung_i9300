<!-- Mixer configuration file for Samsung Galaxy S III -->
<mixer>
	<!-- We are able to have most of our routing static so do that -->

	<!-- Initial mixer settings -->

	<!-- AIF1->DAC1 -->
	<ctl name="DAC1 Switch" value="1" />

	<ctl name="IN1L ZC Switch" value="0" />
	<ctl name="IN1R ZC Switch" value="0" />
	<ctl name="IN2L ZC Switch" value="0" />
	<ctl name="IN2R ZC Switch" value="0" />
	<ctl name="Output ZC Switch" value="0" />
	<ctl name="Speaker ZC Switch" value="0" />
	<ctl name="Headphone ZC Switch" value="0" />

	<!-- AIF1->DAC1 -->
	<ctl name="DAC1L Mixer AIF1.1 Switch" value="1" />
	<ctl name="DAC1R Mixer AIF1.1 Switch" value="1" />
	<ctl name="DAC1 Switch" value="1" />

	<!-- ADC->AIF2 -->
	<ctl name="AIF2DAC2L Mixer Left Sidetone Switch" value="1" />
	<ctl name="AIF2DAC2L Mixer Right Sidetone Switch" value="0" />
	<ctl name="AIF2DAC2R Mixer Left Sidetone Switch" value="0" />
	<ctl name="AIF2DAC2R Mixer Right Sidetone Switch" value="1" />
	<ctl name="DAC2 Left Sidetone Volume" value="12" />
	<ctl name="DAC2 Right Sidetone Volume" value="12" />
	<ctl name="DAC2 Switch" value="1" />

	<!-- DAC1->HP -->
	<ctl name="Left Headphone Mux" value="Mixer" />
	<ctl name="Right Headphone Mux" value="Mixer" />

	<!-- DAC1->SPKL/R->SPKL/R Boost->SPK -->
	<ctl name="SPKL DAC1 Switch" value="1" />
	<ctl name="SPKR DAC1 Switch" value="1" />
	<ctl name="SPKL Boost SPKL Switch" value="1" />
	<ctl name="SPKL Boost SPKR Switch" value="1" />
	<ctl name="SPKR Boost SPKL Switch" value="0" />
	<ctl name="SPKR Boost SPKR Switch" value="1" />
	<ctl name="Speaker Mixer Volume" value="3" />

	<!-- DAC->Output mixer->Earpiece -->
	<ctl name="Left Output Mixer DAC Switch" value="1" />
	<ctl name="Right Output Mixer DAC Switch" value="1" />
	<ctl name="Earpiece Mixer Left Output Switch" value="1" />
	<ctl name="Earpiece Mixer Right Output Switch" value="1" />
	<ctl name="Earpiece Switch" value="1" />

	<!-- LINEOUT -->
	<ctl name="LINEOUT2N Mixer Left Output Switch" value="1" />
	<ctl name="LINEOUT2P Mixer Right Output Switch" value="1" />
	<ctl name="LINEOUT1N Mixer Right Output Switch" value="1" />
	<ctl name="LINEOUT1P Mixer Left Output Switch" value="1" />

	<!-- Input mixer->ADC->AIF1.1 -->
	<ctl name="AIF1ADC1L Mixer ADC/DMIC Switch" value="1" />
	<ctl name="AIF1ADC1R Mixer ADC/DMIC Switch" value="1" />

	<!-- Main Mic->IN1LP/N->Input Mixer with +30dB at mixer -->
	<ctl name="IN1L PGA IN1LP Switch" value="1" />
	<ctl name="IN1L PGA IN1LN Switch" value="1" />
	<ctl name="MIXINL IN1L Volume" value="1" />
	<ctl name="IN1L Switch" value="1" />

	<!-- Sub Mic->IN1RP/N->Input Mixer with +30dB at mixer -->
	<ctl name="IN1R PGA IN1RP Switch" value="1" />
	<ctl name="IN1R PGA IN1RN Switch" value="1" />
	<ctl name="MIXINR IN1R Volume" value="1" />
	<ctl name="IN1R Switch" value="1" />

	<!-- FM Radio->IN2RP/N->Input Mixer with +30dB at mixer -->
	<ctl name="IN2R PGA IN2RP Switch" value="1" />
	<ctl name="IN2R PGA IN2RN Switch" value="1" />
	<ctl name="MIXINR IN2R Volume" value="1" />
	<ctl name="IN2R Switch" value="1" />

	<!-- Ear Mic->IN2LP/N->Input Mixer with +30dB at mixer -->
	<ctl name="IN2L PGA IN2LP Switch" value="1" />
	<ctl name="IN2L PGA IN2LN Switch" value="1" />
	<ctl name="MIXINL IN2L Volume" value="1" />
	<ctl name="IN2L Switch" value="1" />

	<!-- Input mixer->ADC->AIF1 -->
	<ctl name="AIF1ADC1L Mixer ADC/DMIC Switch" value="1" />
	<ctl name="AIF1ADC1R Mixer ADC/DMIC Switch" value="1" />
	<ctl name="ADCL Mux" value="ADC" />

	<!-- HPF on to take out some bounce -->
	<ctl name="Sidetone HPF Switch" value="0" />

	<!-- Work around core issue -->
	<ctl name="ADCL Mux" value="DMIC" />
	<ctl name="ADCL Mux" value="ADC" />
	<ctl name="ADCR Mux" value="DMIC" />
	<ctl name="ADCR Mux" value="ADC" />

	<!-- AIF2ADCDAT to AIF3ADC mux -->
	<ctl name="AIF3ADC Mux" value="1" />

	<!-- Default all outputs off -->
	<ctl name="HP Switch" value="0" />
	<ctl name="SPK Switch" value="0" />
	<ctl name="RCV Switch" value="0" />
	<ctl name="LINE Switch" value="0" />
	<ctl name="HDMI Switch" value="1" />

	<!-- Default all inputs off -->
	<ctl name="Main Mic Switch" value="0" />
	<ctl name="Sub Mic Switch" value="0" />
	<ctl name="Headset Mic Switch" value="0" />
	<ctl name="FM In Switch" value="0" />

	<!-- Set normal path on module init -->
	<ctl name="AIF2 Mode" value="1" />
	<ctl name="DAC1L Mixer AIF1.1 Switch" value="1" />
	<ctl name="DAC1R Mixer AIF1.1 Switch" value="1" />
	<ctl name="AIF2DAC Mux" value="AIF3DACDAT" />
	<ctl name="AIF2DAC2L Mixer AIF2 Switch" value="0" />
	<ctl name="AIF2DAC2R Mixer AIF2 Switch" value="0" />

	<!-- Channels -->

	<path name="channel-left">
		<ctl name="AIF1ADCL Source" value="Left" />
		<ctl name="AIF1ADCR Source" value="Left" />
	</path>

	<path name="channel-right">
		<ctl name="AIF1ADCL Source" value="Right" />
		<ctl name="AIF1ADCR Source" value="Right" />
	</path>

	<path name="channel-stereo">
		<ctl name="AIF1ADCL Source" value="Left" />
		<ctl name="AIF1ADCR Source" value="Right" />
	</path>

	<path name="channel-none">
		<path name="channel-stereo" />
	</path>

	<!-- Paths that roughly correspond to devices -->

	<path name="speaker">
		<ctl name="SPK Switch" value="1" />
	</path>

	<path name="earpiece">
		<ctl name="RCV Switch" value="1" />
	</path>

	<path name="headphones">
		<ctl name="HP Switch" value="1" />
	</path>

	<path name="sco-out">
		<ctl name="AIF3ADC Mux" value="1" />
		<ctl name="AIF2DAC2L Mixer AIF1.1 Switch" value="1" />
		<ctl name="AIF2DAC2R Mixer AIF1.1 Switch" value="1" />
		<ctl name="AIF2ADCL Source" value="0" />
		<ctl name="AIF2ADCR Source" value="0" />
	</path>

	<!-- Analogue Dock Out?? -->
	<path name="dock">
		<ctl name="LINEOUT2N Switch" value="1" />
		<ctl name="LINEOUT2P Switch" value="1" />
		<ctl name="LINEOUT2N Mixer Left Output Switch" value="1" />
		<ctl name="LINEOUT2P Mixer Right Output Switch" value="1" />
		<ctl name="LINE Switch" value="1" />
	</path>

	<!-- AUX Digital Out?? -->
	<path name="aux-digital">
		<ctl name="LINEOUT1N Switch" value="1" />
		<ctl name="LINEOUT1P Switch" value="1" />
		<ctl name="HDMI Switch" value="1" />
	</path>

	<path name="builtin-mic">
		<ctl name="Main Mic Switch" value="1" />
		<ctl name="AIF1ADCL Source" value="0" />
		<ctl name="AIF2ADCL Source" value="0" />
		<ctl name="MIXINL IN1L Switch" value="1" />
	</path>

	<path name="back-mic">
		<ctl name="Sub Mic Switch" value="1" />
		<ctl name="AIF1ADCR Source" value="1" />
		<ctl name="AIF2ADCR Source" value="1" />
		<ctl name="MIXINR IN1R Switch" value="1" />
	</path>

	<path name="headset-in">
		<ctl name="MIXINL IN1L Switch" value="0" />
		<ctl name="MIXINR IN1R Switch" value="0" />
		<ctl name="Headset Mic Switch" value="1" />
		<ctl name="AIF1ADCL Source" value="0" />
		<ctl name="AIF1ADCR Source" value="0" />
		<ctl name="AIF2ADCL Source" value="0" />
		<ctl name="MIXINL IN2L Switch" value="1" />
	</path>

	<path name="sco-in">
		<ctl name="AIF2ADC Mux" value="1" />
		<ctl name="AIF1ADCL Source" value="0" />
		<ctl name="AIF1ADCR Source" value="1" />
		<ctl name="AIF2ADCL Source" value="0" />
		<ctl name="AIF2ADCR Source" value="1" />
		<ctl name="AIF1ADC1R Mixer AIF2 Switch" value="1" />
		<ctl name="AIF1ADC1L Mixer AIF2 Switch" value="1" />
	</path>

	<!-- Paths that roughly correspond to verbs -->
	<path name="normal">
		<ctl name="AIF2 Mode" value="1" />
		<ctl name="DAC1L Mixer AIF1.1 Switch" value="1" />
		<ctl name="DAC1R Mixer AIF1.1 Switch" value="1" />
		<ctl name="AIF2DAC Mux" value="AIF3DACDAT" />
		<ctl name="AIF2DAC2L Mixer AIF2 Switch" value="0" />
		<ctl name="AIF2DAC2R Mixer AIF2 Switch" value="0" />
	</path>

	<path name="voicecall">
		<ctl name="AIF2DACL Source" value="0" />
		<ctl name="AIF2DACR Source" value="0" />
		<ctl name="AIF2 Mode" value="0" />
		<ctl name="DAC1L Mixer AIF1.1 Switch" value="1" />
		<ctl name="DAC1R Mixer AIF1.1 Switch" value="1" />
		<ctl name="DAC1L Mixer AIF2 Switch" value="1" />
		<ctl name="DAC1R Mixer AIF2 Switch" value="1" />
		<ctl name="AIF2DAC Mux" value="AIF2DACDAT" />
	</path>

	<!-- Paths that correspond to modifiers on default_gain.conf -->

	<!-- Playback paths -->
	<path name="voice-speaker">
		<path name="voicecall" />
		<path name="speaker" />
		<ctl name="AIF2DAC2L Mixer AIF2 Switch" value="0" />
		<ctl name="AIF2DAC2R Mixer AIF2 Switch" value="0" />
		<ctl name="AIF2ADC HPF Mode" value="1" />
		<ctl name="AIF2ADC HPF Switch" value="1" />
		<ctl name="AIF1DAC1 Volume" value="96" />
		<ctl name="AIF2DAC Volume" value="96" />
		<ctl name="AIF1 Boost Volume" value="0" />
		<ctl name="AIF2 Boost Volume" value="0" />
		<ctl name="DAC1 Volume" value="96" />
		<ctl name="SPKL DAC1 Volume" value="1" />
		<ctl name="SPKR DAC1 Volume" value="1" />
		<ctl name="Speaker Mixer Volume" value="3" />
		<ctl name="Speaker Boost Volume" value="5" />
		<ctl name="Speaker Volume" value="57" />
	</path>

	<path name="voice-earpiece">
		<path name="voicecall" />
		<path name="earpiece" />
		<ctl name="AIF2DAC2L Mixer AIF2 Switch" value="0" />
		<ctl name="AIF2DAC2R Mixer AIF2 Switch" value="0" />
		<ctl name="AIF2ADC HPF Mode" value="1" />
		<ctl name="AIF2ADC HPF Switch" value="1" />
		<ctl name="AIF1DAC1 Volume" value="96" />
		<ctl name="AIF2DAC Volume" value="96" />
		<ctl name="AIF1 Boost Volume" value="0" />
		<ctl name="AIF2 Boost Volume" value="0" />
		<ctl name="DAC1 Volume" value="96" />
		<ctl name="Left Output Mixer DAC Volume" value="7" />
		<ctl name="Right Output Mixer DAC Volume" value="7" />
		<ctl name="Output Volume" value="57" />
		<ctl name="Earpiece Volume" value="1" />
		<ctl name="Speaker Mixer Volume" value="1" />
		<ctl name="Speaker Volume" value="0" />
	</path>

	<path name="voice-headphones">
		<path name="voicecall" />
		<path name="headphones" />
		<ctl name="AIF2DAC2L Mixer AIF2 Switch" value="0" />
		<ctl name="AIF2DAC2R Mixer AIF2 Switch" value="0" />
		<ctl name="Speaker Mixer Volume" value="1" />
		<ctl name="Speaker Volume" value="0" />
		<ctl name="Headphone ZC Switch" value="0" />
		<ctl name="AIF1DAC1 Volume" value="96" />
		<ctl name="AIF2DAC Volume" value="96" />
		<ctl name="AIF1 Boost Volume" value="0" />
		<ctl name="AIF2 Boost Volume" value="0" />
		<ctl name="DAC1 Volume" value="96" />
		<ctl name="Headphone Volume" value="49" />
	</path>

	<path name="media-speaker">
		<path name="normal" />
		<path name="speaker" />
		<ctl name="AIF1DAC1 Volume" value="96" />
		<ctl name="AIF1 Boost Volume" value="0" />
		<ctl name="DAC1 Volume" value="96" />
		<ctl name="Left Output Mixer DAC Volume" value="7" />
		<ctl name="Right Output Mixer DAC Volume" value="7" />
		<ctl name="SPKL DAC1 Volume" value="1" />
		<ctl name="SPKR DAC1 Volume" value="1" />
		<ctl name="Speaker Mixer Volume" value="3" />
		<ctl name="Speaker Boost Volume" value="4" />
		<ctl name="Speaker Volume" value="57" />
	</path>

	<path name="media-earpiece">
		<path name="normal" />
		<path name="earpiece" />
		<ctl name="AIF1DAC1 Volume" value="96" />
		<ctl name="AIF1 Boost Volume" value="0" />
		<ctl name="DAC1 Volume" value="96" />
		<ctl name="Left Output Mixer DAC Volume" value="7" />
		<ctl name="Right Output Mixer DAC Volume" value="7" />
		<ctl name="Output Volume" value="57" />
		<ctl name="Earpiece Volume" value="1" />
		<ctl name="Speaker Mixer Volume" value="1" />
		<ctl name="Speaker Volume" value="0" />
	</path>

	<path name="media-headphones">
		<path name="normal" />
		<path name="headphones" />
		<ctl name="Speaker Mixer Volume" value="1" />
		<ctl name="Speaker Volume" value="0" />
		<ctl name="Headphone ZC Switch" value="0" />
		<ctl name="AIF1DAC1 Volume" value="96" />
		<ctl name="AIF1 Boost Volume" value="0" />
		<ctl name="DAC1 Volume" value="96" />
		<ctl name="Left Output Mixer DAC Volume" value="7" />
		<ctl name="Right Output Mixer DAC Volume" value="7" />
		<ctl name="Headphone Volume" value="50" />
	</path>

	<path name="voice-rec-speaker">
		<path name="speaker" />
	</path>

	<path name="voice-rec-headphones">
		<path name="headphones" />
	</path>

	<path name="communication-speaker">
		<path name="speaker" />
		<ctl name="AIF1DAC1 Volume" value="96" />
		<ctl name="AIF1 Boost Volume" value="0" />
		<ctl name="DAC1 Volume" value="96" />
		<ctl name="SPKL DAC1 Volume" value="1" />
		<ctl name="SPKR DAC1 Volume" value="1" />
		<ctl name="Speaker Mixer Volume" value="3" />
		<ctl name="Speaker Boost Volume" value="4" />
		<ctl name="Speaker Volume" value="57" />
	</path>

	<path name="communication-earpiece">
		<path name="earpiece" />
		<ctl name="AIF1DAC1 Volume" value="96" />
		<ctl name="AIF1 Boost Volume" value="0" />
		<ctl name="DAC1 Volume" value="96" />
		<ctl name="Left Output Mixer DAC Volume" value="7" />
		<ctl name="Right Output Mixer DAC Volume" value="7" />
		<ctl name="Output Volume" value="57" />
		<ctl name="Earpiece Volume" value="1" />
		<ctl name="Speaker Mixer Volume" value="1" />
		<ctl name="Speaker Volume" value="0" />
	</path>

	<path name="communication-headphones">
		<path name="headphones" />
		<ctl name="Headphone ZC Switch" value="0" />
		<ctl name="AIF1DAC1 Volume" value="96" />
		<ctl name="AIF1 Boost Volume" value="0" />
		<ctl name="DAC1 Volume" value="96" />
		<ctl name="Headphone Volume" value="45" />
		<ctl name="Speaker Mixer Volume" value="1" />
		<ctl name="Speaker Volume" value="0" />
	</path>

	<path name="speaker-and-headphones">
		<path name="speaker" />
		<path name="headphones" />
	</path>

	<!-- SCO Headset Out?? -->
	<path name="bt-sco-headset">
		<path name="sco-out" />
		<ctl name="AIF2DAC2L Mixer AIF2 Switch" value="1" />
		<ctl name="AIF2DAC2R Mixer AIF2 Switch" value="1" />
		<ctl name="Speaker Mixer Volume" value="1" />
		<ctl name="Speaker Volume" value="0" />
	</path>

	<!-- Capture paths -->

	<path name="voice-main-mic">
		<path name="channel-stereo" />
		<path name="builtin-mic" />
		<ctl name="IN1L Volume" value="25" />
		<ctl name="MIXINL IN1L Volume" value="0" />
		<ctl name="DAC2 Left Sidetone Volume" value="12" />
		<ctl name="DAC2 Right Sidetone Volume" value="12" />
		<ctl name="AIF2ADC Volume" value="96" />
		<ctl name="AIF2ADCL DRC Switch" value="0" />
		<path name="back-mic" />
		<ctl name="IN1R Volume" value="25" />
		<ctl name="MIXINR IN1R Volume" value="0" />
		<ctl name="DAC2 Left Sidetone Volume" value="12" />
		<ctl name="DAC2 Right Sidetone Volume" value="12" />
		<ctl name="AIF2ADC Volume" value="96" />
		<ctl name="AIF2ADCL DRC Switch" value="0" />
	</path>

	<path name="voice-headset-mic">
		<path name="channel-left" />
		<path name="headset-in" />
		<ctl name="IN2L Volume" value="28" />
		<ctl name="MIXINL IN2L Volume" value="0" />
		<ctl name="DAC2 Left Sidetone Volume" value="12" />
		<ctl name="AIF2ADC Volume" value="96" />
		<ctl name="AIF2ADCL DRC Switch" value="0" />
	</path>

	<path name="media-main-mic">
		<path name="channel-left" />
		<path name="builtin-mic" />
		<!-- camcorder - builtin mic -->
		<ctl name="AIF1ADC1 HPF Mode" value="0" />
		<ctl name="AIF1ADC1 HPF Switch" value="1" />
		<ctl name="IN1L Volume" value="30" />
		<ctl name="MIXINL IN1L Volume" value="0" />
		<ctl name="AIF1ADC1 Volume" value="96" />
	</path>

	<path name="media-second-mic">
		<path name="channel-right" />
		<path name="back-mic" />
		<ctl name="AIF1ADC1 HPF Mode" value="0" />
		<ctl name="AIF1ADC1 HPF Switch" value="1" />
		<ctl name="IN1R Volume" value="30" />
		<ctl name="MIXINR IN1R Volume" value="0" />
		<ctl name="AIF1ADC1 Volume" value=" 96" />
	</path>

	<path name="media-headset-mic">
		<path name="channel-left" />
		<path name="headset-in" />
		<ctl name="AIF1ADC1 HPF Mode" value="0" />
		<ctl name="AIF1ADC1 HPF Switch" value="1" />
		<ctl name="IN2L Volume" value="11" />
		<ctl name="MIXINL IN2L Volume" value="1" />
		<ctl name="AIF1ADC1 Volume" value="96" />
	</path>

	<path name="voice-rec-main-mic">
		<path name="channel-left" />
		<path name="builtin-mic" />
		<ctl name="AIF1ADC1 HPF Mode" value="1" />
		<ctl name="AIF1ADC1 HPF Switch" value="1" />
		<ctl name="IN1L Volume" value="13" />
		<ctl name="MIXINL IN1L Volume" value="1" />
		<ctl name="AIF1ADC1 Volume" value="96" />
	</path>

	<path name="communication-main-mic">
		<path name="channel-left" />
		<path name="builtin-mic" />
		<ctl name="AIF1ADC1 HPF Mode" value="1" />
		<ctl name="AIF1ADC1 HPF Switch" value="1" />
		<ctl name="IN1L Volume" value="28" />
		<ctl name="MIXINL IN1L Volume" value="0" />
		<ctl name="AIF1ADC1 Volume" value="96" />
	</path>

	<path name="bt-sco-mic">
		<path name="channel-none" />
		<path name="sco-in" />
		<!-- Incallin - SCO Headset In -->
		<ctl name="AIF2ADC Volume" value="96" />
		<ctl name="AIF2DAC Volume" value="96" />
		<ctl name="AIF2ADCL DRC Switch" value="0" />
	</path>

	<path name="voice-rec-headset-mic">
		<path name="channel-left" />
		<path name="headset-in" />
		<ctl name="AIF1ADC1 HPF Mode" value="1" />
		<ctl name="AIF1ADC1 HPF Switch" value="1" />
		<ctl name="IN2L Volume" value="19" />
		<ctl name="MIXINL IN2L Volume" value="1" />
		<ctl name="AIF1ADC1 Volume" value="96" />
	</path>

	<path name="communication-headset-mic">
		<path name="channel-left" />
		<path name="headset-in" />
		<ctl name="AIF1ADC1 HPF Mode" value="1" />
		<ctl name="AIF1ADC1 HPF Switch" value="1" />
		<ctl name="IN1L Volume" value="11" />
		<ctl name="MIXINL IN1L Volume" value="1" />
		<ctl name="AIF1ADC1 Volume" value="96" />
	</path>

	<path name="none">
		<!-- Empty path -->
	</path>
</mixer>
